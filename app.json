{
  "expo": {
    "name": "app-tracer",
    "slug": "app-tracer",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icons/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/images/icons/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#D9072D"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Este aplicativo precisa acessar a c√¢mera.",
        "NSPhotoLibraryUsageDescription": "Este aplicativo precisa acessar sua biblioteca de fotos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/icons/adaptive-icon.png",
        "backgroundColor": "#D9072D"
      },
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./src/assets/images/icons/favicon.png"
    },
    "plugins": [
      "expo-font"
    ]
  }
}
